<Window x:Class="McK.KCC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keeper Configuration Creator" 
        Height="550" Width="680"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Resources/mckcircle.png"
        Background="{StaticResource BackgroundDarkBrush}">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,0,20">
            <Image Source="Resources/mck.png" HorizontalAlignment="Stretch" Stretch="Uniform" MaxHeight="80"/>
        </StackPanel>
        
        <!-- TabControl -->
        <TabControl Grid.Row="1">
            <!-- Tab 1: Local Registration -->
            <TabItem Header="Local Registration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16,20,16,16">
                        <TextBlock Text="Manage Registry Entries for Keeper Config" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                        
                        <!-- User Scope -->
                        <Border x:Name="UserScopeBorder" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="16" 
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="UserScopeText"
                                           FontSize="14" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                                <Button x:Name="BtnUserScope" 
                                        Margin="12,0,0,0" 
                                        Padding="16,8" 
                                        Click="BtnUserScope_Click"
                                        MinWidth="100">
                                    <TextBlock x:Name="BtnUserScopeText" FontSize="13" FontWeight="SemiBold"/>
                                </Button>
                            </StackPanel>
                        </Border>
                        
                        <!-- System Scope -->
                        <Border x:Name="SystemScopeBorder" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="16" 
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="SystemScopeText"
                                           FontSize="14" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                                <Button x:Name="BtnSystemScope" 
                                        Margin="12,0,0,0" 
                                        Padding="16,8" 
                                        Click="BtnSystemScope_Click"
                                        MinWidth="100">
                                    <TextBlock x:Name="BtnSystemScopeText" FontSize="13" FontWeight="SemiBold"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 2: IIS Registration -->
            <TabItem Header="IIS Registration">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16,20,16,16">
                        <TextBlock Text="Manage IIS Site Application Settings for Keeper Config" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Select IIS Site:" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   Margin="0,0,0,8"/>
                        
                        <ComboBox x:Name="CmbIISSites" 
                                  Margin="0,0,0,16"
                                  SelectionChanged="CmbIISSites_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" 
                                               Foreground="{Binding TextColor}"
                                               FontWeight="{Binding FontWeight}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Button x:Name="BtnIISSite" 
                                Padding="16,10" 
                                Click="BtnIISSite_Click"
                                Visibility="Collapsed"
                                HorizontalAlignment="Stretch">
                            <TextBlock x:Name="BtnIISSiteText" FontSize="14" FontWeight="SemiBold"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
