<Window x:Class="McK.KCC.PreloadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keeper Configuration Creator - Checking Permissions" 
        Height="350" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Resources/skull.ico"
        Background="{StaticResource BackgroundDarkBrush}">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,24">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ’€" FontSize="32" VerticalAlignment="Center"/>
                <TextBlock Text="Checking Permissions" FontSize="22" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           Margin="12,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Loading Indicator -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Permission Check Progress" FontSize="14" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                
                <!-- Stage 1 -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Stage1Icon" Text="â—‹" FontSize="18" 
                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Stage 1: Current User Permissions" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"/>
                        <TextBlock x:Name="Stage1Status" Text="Waiting..." 
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>
                </Grid>
                
                <!-- Stage 2 -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Stage2Icon" Text="â—‹" FontSize="18" 
                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Stage 2: Administrator Permissions" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"/>
                        <TextBlock x:Name="Stage2Status" Text="Waiting..." 
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>
                </Grid>
                
                <!-- Stage 3 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Stage3Icon" Text="â—‹" FontSize="18" 
                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Stage 3: Different User Credentials" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"/>
                        <TextBlock x:Name="Stage3Status" Text="Waiting..." 
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Current Status Message -->
        <Border Grid.Row="2" x:Name="StatusBorder" Background="#1E3A2F" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="StatusIcon" Text="â³" FontSize="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusTitle" Text="Checking permissions..." FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                </StackPanel>
                <TextBlock x:Name="StatusMessage" Text="Please wait while we verify registry access permissions." 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           FontSize="12" Margin="24,4,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Cancel Button -->
        <Button Grid.Row="3" x:Name="BtnCancel" Style="{StaticResource ModernButton}" 
                HorizontalAlignment="Center" Padding="30,12" Click="BtnCancel_Click">
            <TextBlock Text="Cancel" FontSize="13"/>
        </Button>
    </Grid>
</Window>
